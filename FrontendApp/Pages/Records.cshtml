@page
@model FrontendApp.Pages.RecordsModel
@{
    ViewData["Title"] = "Records";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrontendApp</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            padding-top: 70px; /* Adjust based on the header height */
        }

        header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1030;
        }
    </style>
</head>
<body>
    <header class="bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <img src="~/images/logo-generic.png" alt="Company Logo" style="height: 50px;" />
            <span>My Application</span>
        </div>
    </header>
    <div class="container mt-5">
        <main role="main" class="pb-3">
            <h2 class="mb-4">Records</h2>

            <div class="mb-4">
                <input type="text" id="search" class="form-control" placeholder="Search records..." />
            </div>

            <table id="recordsTable" class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.Records)
                    {
                        <tr data-id="@record.Id">
                            <td>@record.Id</td>
                            <td contenteditable="true" data-field="name">@record.Name</td>
                            <td contenteditable="true" data-field="description">@record.Description</td>
                            <td>@record.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <button class="save-btn btn btn-success btn-sm">Save</button>
                                <button class="delete-btn btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <button id="prevPage" class="btn btn-primary btn-sm">Previous</button>
                    <button id="nextPage" class="btn btn-primary btn-sm">Next</button>
                    <span>Page: <span id="currentPage">1</span></span>
                </div>
                <div>
                    <select id="pageSize" class="form-control form-control-sm w-auto">
                        <option value="5">5</option>
                        <option value="10">10</option>
                        <option value="20">20</option>
                    </select>
                </div>
            </div>

            <h3>Add New Record</h3>
            <form id="addRecordForm" class="form-inline mb-4">
                <div class="form-group mr-2">
                    <input type="text" id="newName" class="form-control" placeholder="Name" required />
                </div>
                <div class="form-group mr-2">
                    <input type="text" id="newDescription" class="form-control" placeholder="Description" required />
                </div>
                <button type="submit" class="btn btn-primary">Add Record</button>
            </form>
        </main>
    </div>
    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2024 - FrontendApp</span>
            <span>Version 42.0</span>
        </div>
    </footer>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js?v=@DateTime.Now.Ticks"></script>
</body>
</html>
