{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "./js",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "js/*" ]
    }
  },
  "include": [
    "js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
